#include <iostream>
using namespace std;
int main(){
    
    int n = 100;
    cout << "how many elements do you want in the array n: ";
    cin >> n;
    
    int vector[n];
    int sum = 0;
    int product = 1;
    
    cout << "enter " << n << " integer elements:" << endl;
    
    for (int i = 0; i < n; i++ ) {
        cout << "enter element " << i + 1 << ": ";
        cin >> vector[i];
    }
    
    for (int i = 0; i < n; i++ ) { 
        sum += vector[i];
    }
    
    cout << "Sum of elements in the array is: " << sum << endl;
    
    for (int i = 0; i < n; i++ ) { 
        product *= vector[i];
    }
    
    cout << "Product of elements in the array is: " << product;

    return 0;
}
